
<section class="container-fluid bg4">

<div class="add-box">
 


<h1>Sign Up </h1>
<%= render partial: 'errors/errors', locals: {model: @user } if @user %>

<%= form_for(@user) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %><br>

    <%= f.label :email %>
    <%= f.email_field :email, required:true %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>



    <%= f.submit "Submit" %>
<% end  %>

      </div>

</section>